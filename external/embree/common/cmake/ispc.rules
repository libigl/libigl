<?xml version="1.0" encoding="utf-8"?>
<VisualStudioToolFile
	Name="ISPC"
	Version="8,00"
	>
	<Rules>
		<CustomBuildRule
			Name="ISPC"
			DisplayName="Intel SPMD Programm Compiler (ISPC)"
			CommandLine="ispc.exe [AllOptions] [AdditionalOptions] [Inputs]"
			Outputs="$(IntDir)\$(InputName).ispc*.obj"
			FileExtensions="*.ispc"
			ExecutionDescription="Compiling $(InputFileName)  ..."
			>
			<Properties>
				<EnumProperty
					Name="Architecture"
					DisplayName="Target Architecture"
					Description="Select Target Architecture."
					DefaultValue="1"
					>
					<Values>
						<EnumValue
							Value="0"
							Switch="--arch=x86"
							DisplayName="x86"
						/>
						<EnumValue
							Value="1"
							Switch="--arch=x86-64"
							DisplayName="x86-64"
						/>
					</Values>
				</EnumProperty>
				<EnumProperty
					Name="Processor"
					DisplayName="Target Processor"
					Description="Select Target Processor."
					DefaultValue="1"
					>
					<Values>
						<EnumValue
							Value="0"
							Switch="--cpu=atom"
							DisplayName="Atom"
						/>
						<EnumValue
							Value="1"
							Switch="--cpu=penryn"
							DisplayName="Penryn"
						/>
						<EnumValue
							Value="2"
							Switch="--cpu=core2"
							DisplayName="Core 2"
						/>
						<EnumValue
							Value="3"
							Switch="--cpu=corei7"
							DisplayName="Core i7"
						/>
						<EnumValue
							Value="4"
							Switch="--cpu=corei7-avx"
							DisplayName="Core i7 AVX"
						/>
					</Values>
				</EnumProperty>
				<EnumProperty
					Name="TargetISA"
					DisplayName="Target ISA"
					Description="Select Target ISA."
					>
					<Values>
						<EnumValue
							Value="0"
							Switch="--target=sse2"
							DisplayName="SSE2"
						/>
						<EnumValue
							Value="1"
							Switch="--target=sse4"
							DisplayName="SSE4"
						/>
						<EnumValue
							Value="2"
							Switch="--target=avx"
							DisplayName="AVX"
						/>
						<EnumValue
							Value="3"
							Switch="--target=avx1.1"
							DisplayName="AVX-I"
						/>
						<EnumValue
							Value="4"
							Switch="--target=AVX2"
							DisplayName="AVX2"
						/>
						<EnumValue
							Value="5"
							Switch="--target=sse2,sse4"
							DisplayName="SSE2,SSE4"
						/>
						<EnumValue
							Value="6"
							Switch="--target=sse2,sse4,avx"
							DisplayName="SSE2,SSE4,AVX"
						/>
						<EnumValue
							Value="7"
							Switch="--target=sse2,sse4,avx,avx2"
							DisplayName="SSE2,SSE4,AVX,AVX2"
						/>
					</Values>
				</EnumProperty>
				<StringProperty
					Name="ObjectFileName"
					DisplayName="Object File Name"
					PropertyPageName="Output"
					Description="Specifies the name of the output object file."
					Switch="-o &quot;[value]&quot;"
					DefaultValue="$(IntDir)\$(InputName).ispc.obj"
				/>
				<StringProperty
					Name="PreprocessorDefinitions"
					DisplayName="Preprocessor Definitions"
					Description="Defines a text macro with the given name."
					Switch="-D&quot;[value]&quot;"
					Delimited="true"
					Inheritable="true"
				/>
				<StringProperty
					Name="IncludePaths"
					DisplayName="Include Paths"
					Description="Sets path for include file. "
					Switch="-I &quot;[value]&quot;"
					Delimited="true"
					Inheritable="true"
				/>
				<EnumProperty
					Name="WarningLevel"
					DisplayName="Warning Level"
					Description="Sets the warning level."
					DefaultValue="1"
					>
					<Values>
						<EnumValue
							Value="0"
							Switch="--woff"
							DisplayName="Warning Level 0"
						/>
						<EnumValue
							Value="1"
							Switch="--wno-perf"
							DisplayName="Warning Level 1"
						/>
						<EnumValue
							Value="2"
							DisplayName="Warning Level 2"
						/>
					</Values>
				</EnumProperty>
				<BooleanProperty
					Name="GenerateDebugInformation"
					DisplayName="Generate Debug Information"
					Description="Generates Debug Information. (-g)"
					Switch="-g"
				/>
				<EnumProperty
					Name="MathLibrary"
					DisplayName="Math Library"
					Description="Select Math Library"
					>
					<Values>
						<EnumValue
							Value="0"
							Switch="--math-lib=default"
							DisplayName="ISPC Internal"
						/>
						<EnumValue
							Value="1"
							Switch="--math-lib=fast"
							DisplayName="Fast"
						/>
						<EnumValue
							Value="2"
							Switch="--math-lib=svml"
							DisplayName="SVML"
						/>
						<EnumValue
							Value="3"
							Switch="--math-lib=system"
							DisplayName="System"
						/>
					</Values>
				</EnumProperty>
				<EnumProperty
					Name="Opt"
					DisplayName="Optimization Level"
					Description="Optimization Level"
					DefaultValue="1"
					>
					<Values>
						<EnumValue
							Value="0"
							Switch="-O0"
							DisplayName="O0"
						/>
						<EnumValue
							Value="1"
							Switch="-O1"
							DisplayName="O1"
						/>
					</Values>
				</EnumProperty>
				<BooleanProperty
					Name="Assertions"
					DisplayName="Assertions"
					Description="Disables Assertions"
					Switch="--opt=disable-assertions"
					DefaultValue="true"
				/>
				<BooleanProperty
					Name="Aligned"
					DisplayName="Force Aligned Loads"
					Description="Forces Aligned Loads."
					Switch="--opt=force-aligned-memory"
				/>
				<BooleanProperty
					Name="PIC"
					DisplayName="Position Independent Code"
					Description="Generate Position Independent Code"
					Switch="--pic"
				/>
				<BooleanProperty
					Name="WarningsAsErrors"
					DisplayName="Treat Warnings as Errors"
					Description="Treat Warnings as Errors."
					Switch="--werror"
				/>
				<StringProperty
					Name="HeaderFile"
					DisplayName="Header File Name"
					PropertyPageName="Output"
					Description="Interface Header File."
					Switch="-h &quot;[value]&quot;"
					DefaultValue="$(IntDir)\$(InputName)_ispc.h"
				/>
				<BooleanProperty
					Name="NoWarnings"
					DisplayName="Disable Warnings"
					Description="Disable Warnings"
					Switch="--woff"
				/>
			</Properties>
		</CustomBuildRule>
	</Rules>
</VisualStudioToolFile>
